public DomainObjCollector getUserViews(ContextContainer cc) throws CbeException {
    QueryApi queryApi = getQueryApi();

    try {
        // Optimized query construction
        var qb = queryApi.queryFrom(List.of(cc.getUserId()))
                         .fork()
                         .followBack(ElementConstants.OWNER)
                         .filterOfType(ElementConstants.CUSTOMVIEW)
                         .optional()
                         .end()
                         .or()
                         .fork()
                         .followBack(ElementConstants.MEMBER)
                         .followBack(ElementConstants.OWNER)
                         .filterOfType(ElementConstants.CUSTOMVIEW)
                         .optional()
                         .end()
                         .or()
                         .fork()
                         .followBack(ElementConstants.ASSIGNEDTO)
                         .followBack(ElementConstants.OWNER)
                         .filterOfType(ElementConstants.CUSTOMVIEW)
                         .optional()
                         .end();

        var results = qb.query();
        return new DomainObjCollector(results);
    } catch (Exception e) {
        throw new CbeException(HttpStatus.UNPROCESSABLE_ENTITY, e.getMessage(), e);
    }
}
